@using JustPhotoGallery.Web.Helpers
@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-user"></span> @User.Identity.GetUserName()<b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Profile", "Profile", "Photo", new { username = User.Identity.GetUserName() }, null)</li>
                <li>@Html.ActionLink("Settings", "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })</li>
                <li class="divider"></li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a></li>
            </ul>
        </li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.NavBarLink("Sign Up", "Register", "Account", "glyphicon glyphicon-wrench", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.NavBarLink("Sign In", "Login", "Account", "glyphicon glyphicon-eye-open", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
